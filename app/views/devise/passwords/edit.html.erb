<% content_for :title, 'Change Password' %>

<!-- notifications -->
<%= render "shared/notifications" %>

<div id="authentication_form" class="row">
  <div class="small-12 small-centered medium-8 medium-centered large-6 large-centered column clearfix">

    <%= field_set_tag 'Change Your Password' do %>

      <%= form_for(resource, as: resource_name,
                             url: password_path(resource_name),
                             html: { method: :put, class: :flexiform }) do |f| %>

        <% if devise_error_messages! %>
          <div data-alert class="alert-box warning radius">
            <%= devise_error_messages! %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>

        <%= f.hidden_field :reset_password_token %>

        <ul class="no-bullet">
          <li>
            <%= label_tag :password do %>
              New password
              <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
            <% end %>
          </li>
          <li>
            <%= label_tag :password_confirmation do %>
              Confirm new password
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <% end %>
          </li>
          <li><%= f.submit 'Change my password', class: 'button expand' %></li>
        </ul>
      <% end %>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/footer" %>
