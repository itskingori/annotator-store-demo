<ul id="authentication_links" class="text-center no-bullet">
  <%- if controller_name != 'sessions' %>
    <!-- Signin -->
    <li>Already have an account? <%= link_to 'Sign In', new_session_path(resource_name) %>.</li>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <!-- Signup -->
    <li>No account? <%= link_to 'Sign Up', new_registration_path(resource_name) %>.</li>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <!-- Reset -->
    <li>Forgot logins? <%= link_to 'Reset', new_password_path(resource_name) %>.</li>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <!-- Resend confirmations -->
    <li><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></li>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <!-- Resend unlock instructions -->
    <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></li>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>

    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
    <% end -%>
  <% end -%>
</ul>
