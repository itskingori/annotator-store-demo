<% content_for :title, 'Sign Up' %>

<!-- notifications -->
<%= render "shared/notifications" %>

<div id="authentication_form" class="row">
  <div class="small-12 small-centered medium-8 medium-centered large-6 large-centered column clearfix">

    <div class="text-center">
      <h1><strong><%= link_to 'Annotator Engine', root_path %></strong></h1>
    </div>

    <%= field_set_tag 'Sign Up' do %>

      <%= form_for(resource, as: resource_name,
                             url: registration_path(resource_name),
                             html: { class: :flexiform }) do |f| %>

        <% if devise_error_messages! %>
          <div data-alert class="alert-box warning radius">
            <%= devise_error_messages! %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>

        <ul class="no-bullet">
          <li>
            <%= label_tag :email do %>
              Email
              <%= f.email_field :email, autofocus: true %>
            <% end %>
          </li>

          <li>
            <%= label_tag :password do %>
              Password
              <%= f.password_field :password, autocomplete: 'off' %>
            <% end %>
          </li>

          <li>
            <%= label_tag :password_confirmation do %>
              Password Confirmation
              <%= f.password_field :password_confirmation, autocomplete: 'off' %>
            <% end %>
          </li>

          <li>
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            <% end -%>
          </li>

          <li><%= f.submit 'Sign Up', class: 'button expand' %></li>
        </ul>
      <% end %>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/footer" %>
