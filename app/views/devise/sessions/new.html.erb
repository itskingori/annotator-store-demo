<% content_for :title, 'Log In' %>

<!-- notifications -->
<%= render "shared/notifications" %>

<div id="authentication_form" class="row">
  <div class="small-12 small-centered medium-8 medium-centered large-6 large-centered column clearfix">

    <div class="text-center">
      <h2><strong><%= link_to 'The Digital Bleek & Lloyd Collection Annotator Engine', root_path %></strong></h2>
    </div>

    <%= field_set_tag 'Log In' do %>

      <%= form_for(resource, as: resource_name,
                             url: session_path(resource_name),
                             html: { class: :flexiform }) do |f| %>

        <ul class="no-bullet">
          <li>
            <%= label_tag :email do %>
              Email
              <%= f.email_field :email, autofocus: true %>
            <% end %>
          </li>

          <li>
            <%= label_tag :password do %>
              Password
              <%= f.password_field :password, autocomplete: 'off' %>
            <% end %>
          </li>

          <li>
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            <% end -%>
          </li>

          <li><%= f.submit 'Log In', class: 'button expand' %></li>
        </ul>
      <% end %>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/footer" %>
