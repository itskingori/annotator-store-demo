<div class="notifications">
  <% if flash[:notice] %>
    <div data-alert class="text-center alert-box success">
      <%= flash[:notice] %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div data-alert class="text-center alert-box alert">
      <%= flash[:alert] %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
</div>
